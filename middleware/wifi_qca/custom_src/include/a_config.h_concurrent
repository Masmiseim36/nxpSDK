#ifndef _CONFIG_H_
#define _CONFIG_H_

#include <mqx.h>

#ifdef __cplusplus
extern "C" {
#endif


#define ENABLE_FPGA_BUILD 0
#define USE_4BYTE_REGISTER_ACCESS

#define TARGET_AR4100_REV2 0x30000582 
#define TARGET_AR400X_REV1 0x31C80997
